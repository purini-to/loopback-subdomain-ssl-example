section.md-layout.flex
  md-sidenav.md-sidenav-left.md-whiteframe-z2.side-nav(md-component-id="sideNav",
  md-is-locked-open="$mdMedia('gt-md')", x-scrollbar)
    md-toolbar.md-hue-2.profile
      md-menu.flex.md-layout
        md-button.flex.md-layout.layout-align-center(ng-click="main.openProfileMenu($mdOpenMenu, $event)")
          span.team-name {{main.team.team.name}}
          div.md-layout.layout-align-center
            md-icon.state adjust
            span.user-name.flex {{main.user.user.username}}
        md-menu-content(width="4")
          md-menu-item
            md-button 
              md-icon home
              | ホーム
          md-menu-item
            md-button 
              md-icon accessibility
              | プロフィール
          md-divider
          md-menu-item
            md-button 
              md-icon settings
              | チーム設定
          md-menu-item
            md-button(ng-click="main.openDialogInvitation($event)") 
              md-icon redeem
              | 招待
          md-menu-item
            md-button
              md-icon power
              | サービス連携
          md-divider
          md-menu-item
            md-button 
              md-icon exit_to_app
              | ログアウト
    md-content.flex(x-scrollbar)
      md-subheader
        .md-layout.flex
          span.header-text チャンネル
          span.flex
          md-button.md-icon-button.md-accent.md-hue-1(aria-label="channelAdd",
          ng-click="main.openDialogNewChannel($event)")
            md-icon add_circle_outline
      ul.nav-menu
        li.md-layout(ng-repeat="channel in main.team.team.channels")
          md-button.flex(ui-sref="channel.messages({channelName: channel.name})", ng-click="main.close()")
            span.channel-prefix #
            {{channel.name}}
  ui-view.flex.md-layout-column.channel-view
