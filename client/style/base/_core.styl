bgAccount = #00ACC1
bgTeam = #424242
viewColor = #eee

html,
body
  width 100%
  height 100%
  overflow hidden
  background-color bgAccount

.bg-view
  background-color viewColor !important
.bg-account
  background-color bgAccount !important
.bg-team
  background-color bgTeam !important

.text-center
  text-align center

.view-container
  overflow hidden
  position relative

.view
  position absolute
  overflow hidden

.view-container,
.view
  width 100%
  height 100%

.material-icons
  &.tiny
    font-size 1rem
  &.small
    font-size 2rem
  &.medium
    font-size 4rem
  &.large
    font-size 6rem

.circle
  border-radius 50%

.alert
  min-height 24px
  .message
    color rgb(233,30,99)

md-input-container.has-messages
  padding-bottom 2px

md-progress-linear
  position absolute
  top 0px
  right 0px
  left 0px
