bgColor = #00ACC1
viewColor = #eee

html,
body
  width 100%
  height 100%
  background-color bgColor

.bg-background
  background-color bgColor

.bg-view
  background-color viewColor

.text-center
  text-align center

.view-container
  overflow hidden
  position relative

.view
  position absolute
  overflow auto

.view-container,
.view
  width 100%
  height 100%

.material-icons
  &.tiny
    font-size 1rem
  &.small
    font-size 2rem
  &.medium
    font-size 4rem
  &.large
    font-size 6rem

.circle
  border-radius 50%

.alert
  min-height 24px
  .message
    color rgb(233,30,99)

md-input-container.has-messages
  padding-bottom 2px
