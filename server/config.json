{
  "restApiRoot": "/api",
  "host": "loopback.example.com",
  "port": 3000,
  "ssl": {
    "key": "private/privatekey.pem",
    "cert": "private/certificate.pem"
  },
  "remoting": {
    "context": {
      "enableHttpContext": false
    },
    "rest": {
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false,
    "errorHandler": {
      "disableStackTrace": false
    }
  },
  "legacyExplorer": false
}
